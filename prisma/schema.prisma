generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum event_status {
  CANCELED
  EXHAUSTED
}

model event {
  id              String  @id @default(uuid())
  name            String  @db.VarChar(110)
  date_start      DateTime 
  capacity        Int
  description     String?  @db.VarChar(255)
  status          event_status
  is_visible      Boolean  @default(true)

  sector_id       String

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt() @default(now())

  sector          sector   @relation(fields: [sector_id], references: [id])
  
}

model sector {
  id              String  @id  @default(uuid())
  name            String  @db.VarChar(30)
  description     String?  @db.VarChar(255)
  price           Decimal 
  quantity_total  Int

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt() @default(now())

  ticket          ticket[]
  event           event[]

}

enum type_user {
  ADMIN
  CLIENT
}

model user {
  id              String  @id @default(uuid())
  name            String  @db.VarChar(110)
  email           String  
  password        String
  telephone       String  @db.VarChar(11)
  type_user       type_user

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt() @default(now())

  ticket          ticket[]
}

model ticket {
  id              String  @id @default(uuid())
  price_pay       Decimal
  checkin         Boolean
  user_id         String
  sector_id       String

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt() @default(now())

  user            user     @relation(fields: [user_id], references: [id])
  sector          sector   @relation(fields: [sector_id], references: [id])
}





